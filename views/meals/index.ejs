
 <!-- This EJS template renders a personalized "My Meals" dashboard using embedded JavaScript to loop through meals etc. using both external and inline CSS. -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>My Meals - Rooted</title>
  <link rel="stylesheet" href="/assets/style-meals.css" />
  <link href="https://fonts.googleapis.com/css2?family=Lato&family=Playfair+Display:wght@600&display=swap" rel="stylesheet">
  <style>
    body {
      font-family: 'Lato', sans-serif;
      background-color: #f0fdf4;
      margin: 0;
      padding: 2rem;
      text-align: center;
      background-image: url("/assets/leaves-faint.png");
      background-repeat: no-repeat;
      background-size: cover;
      background-position: center;
    }

    .wrapper {
      background-color: rgba(255, 255, 255, 0.92);
      border-radius: 20px;
      max-width: 700px;
      margin: 0 auto;
      padding: 2rem;
      box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
    }

    .top-nav {
      display: flex;
      justify-content: flex-end;
      gap: 1rem;
      margin-bottom: 1.5rem;
    }

    .top-nav a {
      text-decoration: none;
      color: #2e7d32;
      font-weight: bold;
      padding: 0.4rem 1rem;
      border: 2px solid #2e7d32;
      border-radius: 8px;
      transition: 0.3s ease;
    }

    .top-nav a:hover {
      background-color: #c5e1a5;
    }

    .logo {
      width: 60px;
      height: auto;
      margin-bottom: 0.5rem;
    }

    h1 {
      font-family: 'Playfair Display', serif;
      font-size: 3rem;
      color: #2e7d32;
      margin-bottom: 0.3rem;
    }

    h2 {
      font-size: 1.8rem;
      color: #4e4e4e;
      margin-bottom: 1.5rem;
    }

    .meal-list a {
      display: block;
      background-color: #aed581;
      color: black;
      text-decoration: none;
      margin: 0.5rem auto;
      padding: 0.8rem;
      width: 200px;
      border-radius: 10px;
      font-weight: bold;
      transition: background-color 0.3s ease;
    }

    .meal-list a:hover {
      background-color: #9ccc65;
    }
  </style>
</head>

<body>
  <div class="wrapper">
    <div class="top-nav">
      <a href="/meals/new">Log a Meal</a>
      <a href="/auth/sign-out">Sign Out</a>
    </div>

    <img src="/assets/logo.png" alt="Rooted Logo" class="logo" />
    <h1>Rooted</h1>
    <h2>My Meals</h2>

    <div class="meal-list">
      <% meals.forEach((meal, index) => { %>
        <a href="/meals/<%= meal._id %>">Meal <%= index + 1 %></a>
      <% }) %>
    </div>
  </div>
</body>
</html>
